# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
NEXT_PUBLIC_APP_URL=http://localhost:3000

# SMTP Configuration (for Supabase Edge Function)
SMTP_HOSTNAME=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=noreply@example.com

# Authentication
NEXT_PUBLIC_AUTH_COOKIE_NAME=sb-auth-token
NEXT_PUBLIC_AUTH_COOKIE_DOMAIN=localhost

# Feature Flags
NEXT_PUBLIC_ENABLE_WORKSPACE_TEMPLATES=true
NEXT_PUBLIC_ENABLE_WORKSPACE_ANALYTICS=true

# Rate Limiting
NEXT_PUBLIC_API_RATE_LIMIT=100
NEXT_PUBLIC_API_RATE_LIMIT_WINDOW=60

# Storage
NEXT_PUBLIC_MAX_UPLOAD_SIZE=5242880 # 5MB in bytes
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/*,application/pdf

# Deployment Environment
NODE_ENV=development